<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/penyakitImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_above="@+id/labelTitle"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/labelTitle"
            android:layout_marginTop="11dp"
            android:background="#000" />

        <TextView
            android:id="@+id/labelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="dummy"
            android:textSize="36dp"
            />


        <TextView
            android:id="@+id/desk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelTitle"
            android:padding="8dp"
            android:text="info_placeholder"
            android:visibility="invisible"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/pengobatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelTitle"
            android:padding="8dp"
            android:text="info_placeholder"
            android:visibility="invisible"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/penyebab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:text="info_placeholder"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelTitle"
            android:padding="8dp"
            android:text="info_placeholder"
            android:visibility="invisible"
            android:textColor="@color/colorWhite"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>